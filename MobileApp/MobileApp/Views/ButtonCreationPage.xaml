<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ButtonCreationPage"
             xmlns:vm="clr-namespace:MobileApp.ViewModels"
             Title="{Binding Title}">

    <!--CONNECTING VIEWMODEL TO BUTTONCREATION XAML-->
    <ContentPage.BindingContext>
        <vm:ButtonCreationViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="ErrorLabel" Text="{Binding ErrorMsg}" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="{Binding BgColor}" FontSize="Medium" />
            <Entry x:Name="name" Text="{Binding Name}" Placeholder="Naam"></Entry>
            <Entry x:Name="topic" Text="{Binding Topic}" Placeholder="MQTT topic"></Entry>
            <Button 
                    Text="Voeg toe" 
                    Command="{Binding ClickCommand}" 
                    CommandParameter="{Binding Source={x:Reference name}, Path=Text}">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>