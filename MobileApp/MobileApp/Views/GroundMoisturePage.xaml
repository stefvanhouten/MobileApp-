<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.GroundMoisturePage"
             xmlns:vm="clr-namespace:MobileApp.ViewModels" xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <forms:ChartView x:Name="MoistureChart" EnableTouchEvents="true" VerticalOptions="FillAndExpand" Chart="{Binding Chart}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>