<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ProductPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Product"
                VerticalOptions="Fill" 
                HorizontalOptions="CenterAndExpand" 
                   FontSize="Title"/>
            <Button Margin="30" Text="Ground Moisture: %" Command="{Binding GraphNavigation}" CommandParameter="Plant/Moisture" BackgroundColor="Aqua"/>
            <Button Margin="30" Text="{Binding CurrentTempStatus}"  Command="{Binding TempButtonClickCommand}" CommandParameter="Plant/Temperature" BackgroundColor="Red"/>
            <Button Margin="30" Text="{Binding CurrentCoffeStatus}" Command="{Binding CoffeeSwitchClickCommand}" CommandParameter="CoffeeOnOffFeedback" BackgroundColor="Chocolate"/>
            <Button Margin="30" Text="{Binding CurrentWaterStatus}" Command="{Binding WaterSwitchClickCommand}"  BackgroundColor="Blue"/>
            <DatePicker MinimumDate="{Binding MinimumDate}"
                        MaximumDate="{Binding MaximumDate}"
                        Date="{Binding Date}"/>
                        
            <TimePicker Time="{Binding SelectedTime}"/>

            <Button Margin="30" Text="{Binding CurrentDateTime}" Command="{Binding StartTimerCommand}" BackgroundColor="Blue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>